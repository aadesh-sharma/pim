{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table table-striped table-bordered" >
        <thead>
            <tr>
                <th>Id</th>
                <th>category</th>
                <th>Name</th>
                {# <th>Post_thumbnail</th> #}
                <th>Description</th>
                {# <th>LongDesc</th> #}
                <th>Height</th>
                <th>Width</th>
                <th>Color</th>
                <th>Status</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Quality</th>
                <th>Tax</th>
                <th>DelCharges</th>
                <th>Dicount</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.name }}</td>
                {# <td>{{ product.postThumbnail }}</td> #}
                <td>{{ product.shortDescription }}</td>
                {# <td>{{ product.longDescription }}</td> #}
                <td>{{ product.height }}</td>
                <td>{{ product.width }}</td>
                <td>{{ product.color }}</td>
                <td>{{ product.status }}</td>
                <td>{{ product.brand }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.quality }}</td>
                <td>{{ product.tax }}</td>
                <td>{{ product.deliveryCharges }}</td>
                <td>{{ product.discount }}</td>
                <td>{{ product.created ? product.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.updated ? product.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td><img src ="/uploads/products/{{product.getPostThumbnail()}}" height="50" width="50" ></td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary" style="padding:5px;margin-bottom:5px;">show</a>
                    <br>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary" style="padding:5 5px;">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">No products assigned to you.Contact admin.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('product_new') }}">Create new</a> #}
{% endblock %}
