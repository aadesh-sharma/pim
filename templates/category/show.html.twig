{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>CountryOrigin</th>
                <td>{{ category.countryOrigin }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ category.size }}</td>
            </tr>
            <tr>
                <th>Popularity</th>
                <td>{{ category.popularity }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ category.language }}</td>
            </tr>
            <tr>
                <th>SpecialNotes</th>
                <td>{{ category.specialNotes }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ category.created ? category.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ category.updated ? category.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Att1</th>
                <td>{{ category.att1 }}</td>
            </tr>
            <tr>
                <th>Att2</th>
                <td>{{ category.att2 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-success">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
