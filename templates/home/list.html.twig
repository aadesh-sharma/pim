
{% extends 'base.html.twig' %}

{% block title %}PRODUCT{% endblock %}

{% block body %}


<div class="container">
    <div class="row">
        <div class="row">
            {% for product in product %}
                <div class="col-md-12">
                    <div class="jumbotron">
                        <div class="col-sm-8">
                            <div class="card-body d-flex flex-column align-items-start">
                                {# <strong class="d-inline-block mb-2 text-primary">World</strong> #}
                                <h2 class="mb-0">
                                    {{product.getName()}}
                                </h2>
                                <div>ABOUT:{{product.getShortdescription()}}</div>
                                <p class="card-text mb-auto">DETAIL:{{product.getlongdescription()|striptags|slice(0, 50)}}</p>
                                <p >COLOR:{{product.getColor()}}</p>
                                <p >PRICE:{{product.getPrice()}}</p>
                                <p >DELIVERY CHARGES:{{product.getDeliverycharges()}}</p>
                                 <div class="mb-1 text-muted">created on:{{product.getCreated()|date('j M, Y h:i A')}}</div>
                                 <div class="mb-1 text-muted">updated on:{{product.getUpdated()|date('j M, Y h:i A')}}</div>
                                
                            </div>
                        </div>
                        <div class="col-sm-4"><img  alt="Thumbnail [200x250]" style="max-width: 100%;" src="/uploads/products/{{product.getPostThumbnail()}}" data-holder-rendered="true">
                               <p class="card-text mb-auto">Brand:{{product.getBrand()}}</p><br>
                                <p class="card-text mb-auto"> DISCOUNT:{{product.getDiscount()}}</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
                        
{% endblock %}
{% block javascripts %}{% endblock %}